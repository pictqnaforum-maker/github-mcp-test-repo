{
  "name": "github-mcp-tools-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end testing suite for GitHub MCP Tools API endpoints",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:specific": "jest --testNamePattern",
    "test:category": "jest --testPathPattern",
    "setup": "node scripts/setup.js",
    "cleanup": "node scripts/cleanup.js",
    "validate-env": "node scripts/validate-env.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/src/setup/jest.setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/setup/**",
      "!src/utils/logger.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/setup/"
    ]
  },
  "keywords": [
    "github",
    "api",
    "testing",
    "mcp-tools",
    "e2e",
    "automation"
  ],
  "author": "GitHub MCP Tools Tester",
  "license": "MIT"
}
